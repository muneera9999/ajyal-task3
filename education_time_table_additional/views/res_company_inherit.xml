<odoo>
    <record id="res_company_model_inherit" model="ir.ui.view">
        <field name="name">res.company.form.inherit.education</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="principal_id" string="Principal" />
            </field>
        </field>
    </record>
    <record id="res_users_form_inherit" model="ir.ui.view">
        <field name="name">res.users.form.inherit.education</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <field name="is_principal" string="Is Principal" />
            </div>
        </field>
    </record>
</odoo>